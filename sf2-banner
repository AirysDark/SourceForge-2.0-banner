#!/usr/bin/env bash
COLOUR_RESET='\e[0m'
BLUE='\e[38;5;33m'
WHITE='\e[1m'
line() { echo -e " ${BLUE}──────────────────────────────────────────────${COLOUR_RESET}"; }
line
echo -e " ${WHITE}SourceForge 2.0 Banner${COLOUR_RESET}"
line
for script in /usr/lib/sf2/banner.d/*.sh; do
  [ -x "$script" ] && "$script"
done
line
